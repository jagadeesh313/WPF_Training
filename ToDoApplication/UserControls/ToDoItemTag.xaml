<UserControl
	x:Class="ToDoApplication.UserControls.ToDoItemTag"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ToDoApplication.UserControls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="Root"
	d:DesignHeight="36"
	d:DesignWidth="64"
	mc:Ignorable="d">

	<Border
		Height="32"
		Margin="5,0,0,0"
		Background="Red"
		CornerRadius="6">

		<TextBlock
			x:Name="TagTextBlock"
			Margin="8"
			Foreground="White"
			Text="{Binding ElementName=Root, Path=TagText}"
			TextAlignment="Center" />
	</Border>
</UserControl>
